pcm.!default {

        type asym

        playback.pcm {
                type hw
                card 1
                device 1
                subdevice 1
        }

        capture.pcm {
                type plug
                slave {
                        pcm {
                                type hw
                                card 1
                                device 0
                                subdevice 0
                        }
                }
        }
}